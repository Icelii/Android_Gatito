<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:text="Ganador!!!"
        android:fontFamily="@font/pixelfy"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/MarcadorFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:text="0"
        android:fontFamily="@font/pixelfy"
        android:textSize="52dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/textoo"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/SeguirJugando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MarcadorFinal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Seguir jugando"
        android:fontFamily="@font/pixelfy"
        android:textSize="15sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/ReiniciarPartida2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SeguirJugando"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Reiniciar partida"
        android:fontFamily="@font/pixelfy"
        android:textSize="15sp"
        android:textColor="@color/white"
        />

</RelativeLayout>